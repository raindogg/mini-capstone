<h1>Your cart:</h1>
<div class="container">
<% @carted.each do |product| %>
  <h3>Monster: <%= product.monster.name %></h3>
  <img src='<%= product.monster.top_image %>'>
  <h3>Quantity: <%= product.quantity%></h3>
  <h3>Subtotal: <%= number_to_currency(product.subtotal) %></h3>
  <%= link_to 'Remove monster', "/carted_products/#{product.id}", method: :delete %>
<% end %>

<button id="btn btn-default"><%= link_to 'Buy now!', '/orders', method: :post %></button>

</div>