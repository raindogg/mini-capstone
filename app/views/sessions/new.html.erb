<h1>Log in for all your favorite monsters</h1>

<%= form_tag '/login', method: :post, class: "form-horizontal" do %>
 <div class="form-group">
  <%= label_tag :email, nil, class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
  <%= text_field_tag :email, nil, class: "entry form-control" %>
  </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, nil, class: "col-sm-2 control-label"  %>
      <div class="col-sm-10">
    <%= password_field_tag :password, nil, class: "entry form-control" %>
  </div>
  </div>
  <div>
    <%= submit_tag 'Start shopping', class: 'btn btn-default' %>
  </div>

<% end %>