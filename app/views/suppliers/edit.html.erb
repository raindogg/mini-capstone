<h1>Edit your supplier</h1>

<%= form_tag "/suppliers/#{ @supplier.id }", method: :patch, class: "form-horizontal" do %>

  <div class="form-group">
    <%= label_tag :name, nil, class: "col-sm-2 control-label" %>
     <div class="col-sm-10">
    <%= text_field_tag :name, "#{@supplier.name}", class: "form-control" %>
  </div>
  </div>
   <div class="form-group">
    <%= label_tag :email, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= text_field_tag :email, "#{@supplier.email}", class: "form-control"  %>
    </div>
  </div>
  </div><div class="form-group">
    <%= label_tag :phone, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= text_field_tag :phone, "#{@supplier.phone}", class: "form-control"  %>
    </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
    <%= submit_tag 'Update your supplier', class: "btn btn-default" %>
  </div>
  </div>
<% end %>