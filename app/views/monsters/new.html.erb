<% @monster.errors.full_messages.each do |error| %>
  <h3><%= error %></h3>
<% end %>

<h1>Submit your monster</h1>

<%= form_tag '/monsters', method: :post, class: "form-horizontal" do %>
  <div class="form-group">
    <%= label_tag :name, nil, class: "col-sm-2 control-label" %>
     <div class="col-sm-10">
    <%= text_field_tag :name, @monster.name, class: "form-control" %>
  </div>
  </div>
   <div class="form-group">
    <%= label_tag :origin, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= text_field_tag :origin, @monster.origin, class: "form-control"  %>
    </div>
  </div>
  </div><div class="form-group">
    <%= label_tag :price, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= text_field_tag :price, @monster.price, class: "form-control"  %>
    </div>
  </div><div class="form-group">
    <%= label_tag :description, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= text_field_tag :description, @monster.description, class: "form-control"  %>
    </div>
  </div><div class="form-group">
    <%= label_tag :image, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= text_field_tag :image, nil, class: "form-control"  %>
    </div>
  </div>
  <div class="form-group">
      <%= label_tag :image_2, nil, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= text_field_tag :image_2, nil, class: "form-control"  %>
      </div>
    </div>
<div class="form-group">
    <%= label_tag :danger_rating, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= text_field_tag :danger_rating, nil, class: "form-control"  %>
    </div>
  </div>
  <div class="form-group">
      <%= label_tag :supplier_id, nil, class: "col-sm-2 control-label" %>
      <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name, class: "col-sm-10" %>
    </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
    <%= submit_tag 'Add your monster', class: "btn btn-default" %>
  </div>
  </div>
<% end %>