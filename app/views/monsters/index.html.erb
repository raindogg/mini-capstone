<div class="container">
    <div class='btn-group'>
      <button type='btn col-md-4'><a href="/monsters?sort=price">Sort price, ascending</a></button>
      <button type='btn col-md-4'><a href="/monsters?sort=price&sort_order=desc">Sort price, descending</a></button>
      <button type='btn col-md-4'><a href="/monsters?discount=30">Discounted only</a></button>
    </div>
 <h1 class="header-title">All available monsters:</h1>
    <br>

    <div class="row">
    <% @monsters.each do |monster| %>

    <div class="col-md-4 index-item">

        <a href="/monsters/<%= monster.id %>" ><img src=<%= monster.top_image %>></a>
        <h2><%= link_to "#{monster.name}", "/monsters/#{monster.id}" %></h2>
        <!-- can use the <a href="/monsters/<%= monster.id %>" method too. -->
        <p><%= monster.description %></p>

        <h3>Origin: <%= monster.origin %></h3>
        <h3>Danger Rating: <%= monster.danger_rating %></h3>
        <h3>Price: <%= number_to_currency(monster.price) %></h3>

     </div>
    <% end %>
    </div>
    </div>

