<h1>Edit your monster</h1>

<%= form_tag "/monsters/#{ @monster.id }", method: :patch, class: "form-horizontal" do %>

  <div class="form-group">
    <%= label_tag :name, nil, class: "col-sm-2 control-label" %>
     <div class="col-sm-10">
    <%= text_field_tag :name, "#{@monster.name}", class: "form-control" %>
  </div>
  </div>
   <div class="form-group">
    <%= label_tag :origin, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= text_field_tag :origin, "#{@monster.origin}", class: "form-control"  %>
    </div>
  </div>
  </div><div class="form-group">
    <%= label_tag :price, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= text_field_tag :price, "#{@monster.price}", class: "form-control"  %>
    </div>
  </div><div class="form-group">
    <%= label_tag :description, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= text_field_tag :description, "#{@monster.description}", class: "form-control"  %>
    </div>
  </div><div class="form-group">
    <%= label_tag :image, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= text_field_tag :image, "#{@monster.image}", class: "form-control"  %>
    </div>
  </div>
<div class="form-group">
    <%= label_tag :danger_rating, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= text_field_tag :danger_rating, "#{@monster.danger_rating}", class: "form-control"  %>
    </div>
    <div class="form-group">
    <div class="col-sm-10">
       <div class="col-sm-10">
       <div class="form-group">
       <%= label_tag :in_stock, nil, class: "col-sm-2 control-label"%>
       <%= radio_button_tag :in_stock, true, class: "form-control" %>
       </div>
       </div>
       <div class="col-sm-10">
       <div class="form-group">
       <%= label_tag :out_of_stock, nil, class: "col-sm-2 control-label"%>
       <%= radio_button_tag :in_stock, false, class: "form-control" %>
    </div>
    </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
    <%= submit_tag 'Update your monster', class: "btn btn-default" %>
  </div>
  </div>
<% end %>