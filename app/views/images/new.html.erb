<% @image.errors.full_messages.each do |error| %>
  <h3><%= error %></h3>
<% end %>

<h1>Add a new image</h1>

<%= form_tag '/images', class: 'form-horizontal' do %>
  <div class="form-group">
    <%= label_tag :url, nil, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= text_field_tag :url, nil, class: "form-control" %>
      </div>
  </div>
  <div class="form-group">
    <%= label_tag :monster_id, nil, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= text_field_tag :monster_id, nil, class: "form-control" %>
      </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag 'Add image', class: "btn btn-default" %>
    </div>
  </div>

<% end %>