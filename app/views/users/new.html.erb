<h1>Sign up for unparalleled monster access</h1>

<%= form_tag '/users', method: :post do %>
  <div class="form-group">
    <%= label_tag :name, nil, class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
    <%= text_field_tag :name, nil, class: "entry form-control"%>
  </div>
  </div>
  <div class="form-group">
    <%= label_tag :email, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= text_field_tag :email, nil, class: "entry form-control" %>
  </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, nil, class: "col-sm-2 control-label"  %>
  <div class="col-sm-10">
    <%= password_field_tag :password, nil, class: "entry form-control"  %>
  </div>
  </div>
  <div class="form-group">
    <%= label_tag :password_confirmation, nil, class: "col-sm-2 control-label"  %>
    <div class="col-sm-10">
    <%= password_field_tag :password_confirmation, nil, class: "entry form-control"  %>
  </div>
  </div>
  <div class="form-group">
    <%= submit_tag 'Sign up!', class: "btn btn-default" %>
  </div>

<% end %>